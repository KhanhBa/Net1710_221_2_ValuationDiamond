@page
@using ValuationDiamond.Business;
@using ValuationDiamond.Data.Models;
@model ValuationDiamond.RazorWebApp.Pages.CertificateValuationModel
@{
    ViewData["Title"] = "CertificateValuation";
}
<h1>CertificateValuation Management</h1>

<table class="table">
    <thead>
        <tr>
            <th>Valuation ID</th>
            <th>Price</th>
            <th>Status</th>
            <th>Day</th>
            <th>Description</th>
            <th>Valuate Diamond ID</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var valuationCertificate in Model.cers)
        {
            <tr>
                <td>@valuationCertificate.ValuationId</td>
                <td>@valuationCertificate.Price</td>
                <td>@valuationCertificate.Status</td>
                <td>@valuationCertificate.Day</td>
                <td>@valuationCertificate.Description</td>
                <td>@valuationCertificate.ValuateDiamondId</td>
                <td><button id="UpdateButton" class="btn btn-primary">Update</button></td>
            </tr>
        }
    </tbody>
</table>
<button id="createNewButton" class="btn btn-primary">Create New</button>
<div id="certificateModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>New Certificate Valuation</h2>
        <form method="post" asp-action=",Create">
            <div class="form-group">
                <label for="price">Price:</label>
                <input type="number" id="price" name="Price" class="form-control" asp-for="NewCertificateValuation.Price" required>
            </div>
            <div class="form-group">
                <label for="status">Status:</label>
                <input type="text" id="status" name="Status" class="form-control" asp-for="NewCertificateValuation.Status" required>
            </div>
            <div class="form-group">
                <label for="day">Day:</label>
                <input type="date" id="day" name="Day" class="form-control" asp-for="NewCertificateValuation.Day" required>
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <input type="text" id="description" name="Description" class="form-control" asp-for="NewCertificateValuation.Description" required>
            </div>
            <div class="form-group">
                <label for="valuateDiamondId">Valuate Diamond ID:</label>
                <input type="number" id="valuateDiamondId" name="ValuateDiamondId" class="form-control" asp-for="NewCertificateValuation.ValuateDiamondId" required>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
            
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var modal = document.getElementById("certificateModal");
            var btn = document.getElementById("createNewButton");
            var span = document.getElementsByClassName("close")[0];

            btn.onclick = function () {
                modal.style.display = "block";
            }

            span.onclick = function () {
                modal.style.display = "none";
            }

            window.onclick = function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }
        });
    </script>
}

<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0,0,0,0.5);
        backdrop-filter: blur(5px);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 10% auto;
        padding: 20px;
        border-radius: 10px;
        border: 1px solid #888;
        width: 50%;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: bold;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

    .btn:hover {
        opacity: 0.8;
    }
</style>
