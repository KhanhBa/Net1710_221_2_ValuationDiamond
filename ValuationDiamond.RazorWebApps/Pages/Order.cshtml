@page
@model ValuationDiamond.RazorWebApp.Pages.OrderModel

@{
    ViewData["Title"] = "Order category page";
    var orders = Model.Orders;
}

<div class="text-center">
    <h1 class="display-6">Order Management</h1>
</div>

<div class="row">
    <div class="col-md-12 text-end">
        <button type="button" class="btn btn-primary" onclick="add();">
            Add
        </button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="card-header">
                    <th class="card-title text-center">OrderId</th>
                    <th class="card-title text-center">PayStatus</th>
                    <th class="card-title text-center">Status</th>
                    <th class="card-title text-center">Payment</th>
                    <th class="card-title text-center">Day</th>
                    <th class="card-title text-center">Quantity</th>
                    <th class="card-title text-center">TotalAmount</th>
                    <th class="card-title text-center">CustomerId</th>
                    <th class="card-title text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="tblorderList">
                @if (orders.Count > 0)
                {
                    foreach (var order in orders)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.PayStatus</td>
                            <td>@order.Status</td>
                            <td>@order.Payment</td>
                            <td>@order.Day</td>
                            <td>@order.Quantity</td>
                            <td>@order.TotalAmount</td>
                            <td>@order.CustomerId</td>
                            <td>
                                <button class="btn btn-warning" onclick="editOrder(@order.OrderId)">Edit</button>
                                <button class="btn btn-danger" onclick="deleteOrder(@order.OrderId)">Delete</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="orderModal" tabindex="-1" aria-labelledby="orderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { name = "frm", id = "frm" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="orderModalLabel">Order Transaction</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="orderModalContent"></div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row">
                                @* <div class="col-md-6">
                                    <label for="1">OrderId</label>
                                    <input asp-for="Order.OrderId" class="form-control" />
                                </div> *@
                                <div class="col-md-6">
                                    <label for="1">Quantity</label>
                                    <input asp-for="Order.Quantity" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label for="1">Payment</label>
                                    <input asp-for="Order.Payment" class="form-control" />
                                </div>
                                @* <div class="col-md-6">
                            <label for="1">Active</label>
                            <input asp-for="order.IsActive" type="checkbox" />
                            <input type="checkbox" id="order_IsActive" name="order.IsActive" class="form-check-input" />
                            <input type="hidden" id="order_IsActive" value="@Model.order?.IsActive" />
                            </div> *@
                            </div>                          
                        </div>
                        <div class="col-md-12">
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label for="1">PayStatus</label>
                                    <input asp-for="Order.PayStatus" class="form-control" />
                                </div>                               
                                <div class="col-md-6">
                                    <label for="1">Status</label>
                                    <input asp-for="Order.Status" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group row">
                                <div class="col-md-4">
                                    <label for="1">Day</label>
                                    <input asp-for="Order.Day" class="form-control" />
                                </div>
                                <div class="col-md-4">
                                    <label for="1">TotalAmount</label>
                                    <input asp-for="Order.TotalAmount" class="form-control" />
                                </div>
                                <div class="col-md-4">
                                    <label for="1">CustomerId</label>
                                    <input asp-for="Order.CustomerId" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label>@Model.Message</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btSave" type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        function add() {
            $('#orderModal').modal('show');           
        }



        function deleteOrder(orderId) {
            if (confirm('Are you sure you want to delete this order?')) {
                $.ajax({
                    url: '/Order?handler=Delete',
                    type: 'POST',
                    data: {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                        OrderId: orderId
                    },
                    success: function (data) {
                        location.reload();
                    },
                    error: function (xhr, status, error) {
                        alert('An error occurred while deleting the order: ' + error);
                    }
                });
            }
        }
    </script>
}


