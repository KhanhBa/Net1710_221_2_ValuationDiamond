@page
@model ValuationDiamond.RazorWebApp.Pages.CustomerPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Customer</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.CustomerId" />
            <div class="form-group">
                <label asp-for="Customer.Name" class="control-label"></label>
                <input asp-for="Customer.Name" class="form-control" />
                <span asp-validation-for="Customer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Cccd" class="control-label"></label>
                <input asp-for="Customer.Cccd" class="form-control" />
                <span asp-validation-for="Customer.Cccd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Email" class="control-label"></label>
                <input asp-for="Customer.Email" class="form-control" />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Password" class="control-label"></label>
                <input asp-for="Customer.Password" class="form-control" />
                <span asp-validation-for="Customer.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Status" class="control-label"></label>
                <input asp-for="Customer.Status" class="form-control" />
                <span asp-validation-for="Customer.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.DoB" class="control-label"></label>
                <input asp-for="Customer.DoB" class="form-control" />
                <span asp-validation-for="Customer.DoB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Address" class="control-label"></label>
                <input asp-for="Customer.Address" class="form-control" />
                <span asp-validation-for="Customer.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Avatar" class="control-label"></label>
                <input type="file" asp-for="AvatarFile" class="form-control-file" />
                <span asp-validation-for="AvatarFile" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(Model.Customer.Avatar))
                {
                    <div class="mt-2">
                        <img src="@Model.Customer.Avatar" alt="Avatar" style="width: 100px; height: 100px;" />
                    </div>
                }
            </div>
            <div class="form-group">
                <label asp-for="Customer.Phone" class="control-label"></label>
                <input asp-for="Customer.Phone" class="form-control" />
                <span asp-validation-for="Customer.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">
        <button type="submit" class="btn btn-primary">Back to List</button>
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
