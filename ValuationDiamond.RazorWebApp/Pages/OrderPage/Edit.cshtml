@page
@model ValuationDiamond.RazorWebApp.Pages.OrderPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.OrderId" />
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="Order.PayStatus" class="form-check-input" type="checkbox" />
                    <label asp-for="Order.PayStatus" class="form-check-label"></label>
                </div>
                <span asp-validation-for="Order.PayStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Status" class="control-label"></label>
                <input asp-for="Order.Status" class="form-control" />
                <span asp-validation-for="Order.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Payment" class="control-label"></label>
                <input asp-for="Order.Payment" class="form-control" />
                <span asp-validation-for="Order.Payment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Day" class="control-label"></label>
                <input asp-for="Order.Day" class="form-control" />
                <span asp-validation-for="Order.Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Quantity" class="control-label"></label>
                <input asp-for="Order.Quantity" class="form-control" readonly="true" />
                <span asp-validation-for="Order.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.TotalAmount" class="control-label"></label>
                <input asp-for="Order.TotalAmount" class="form-control" readonly="true" />
                <span asp-validation-for="Order.TotalAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Customer" class="control-label"></label>
                <input asp-for="Order.Customer.Name" class="form-control" asp-items="ViewBag.CustomerName" readonly="true"></input>
                <span asp-validation-for="Order.Customer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.OrderCode" class="control-label"></label>
                <input asp-for="Order.OrderCode" class="form-control" readonly="true" />
                <span asp-validation-for="Order.OrderCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.StaffName" class="control-label"></label>
                <input asp-for="Order.StaffName" class="form-control" />
                <span asp-validation-for="Order.StaffName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
